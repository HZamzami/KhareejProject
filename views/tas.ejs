				<table class="table">
					<thead>
						<tr>
							<th>Personal Info</th>
							<th>Status</th>
							<th>Last modified</th>
							<th>University</th>
							<th>Major</th>
							<th>Action</th>
						</tr>
					</thead>
					<tbody>

						<% talents.forEach((talent)=> { %>
							<tr>
								<td>
									<div onclick="location.href='#';" style="cursor: pointer" class="user-info">
										<div class="user-info__img">
											<img src="user-pic.png" alt="User Img">
										</div>
										<div class="user-info__basic">
											<h5 class="mb-0">
												<%= talent.name %>
											</h5>
											<p class="text-muted mb-0">28 yrs, Male</p>
										</div>
									</div>
								</td>
								<td>
									<h6 class="mb-0">
										<%= talent.status %>
									</h6>
								</td>
								<td>
									<h6 onclick="location.href='#';" class="mb-0">2 Feb 2021</h6>
									<small>06:00 PM</small>
								</td>
								<td>
									<h6 class="mb-0">
										<%= talent.uni %>
									</h6>
									<!-- <a href="#!"><small>Contact</small></a> -->
								</td>
								<td>
									<h6 class="mb-0">
										<%= talent.major %>
									</h6>
								</td>
								<td>
									<!-- check if the recrutir is already following the talent or not  -->
									<% if (talent.following.includes("1") ) { %>
										<button class="follow-button" style="color: rgb(255, 255, 255); background-color: rgb(46, 184, 46);border-color: rgb(46, 184, 46);" onclick="follow(this)">Following</button>
										<% } else { %>
											<button class="follow-button" onclick="follow(this)">+ Follow</button>
											<% } %>
								</td>
							</tr>


							<% }) %>

