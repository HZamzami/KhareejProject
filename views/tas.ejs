	<body>
		<%- include("./partials/nav.ejs") %>



			<!-- search -->
			<div class="search-wrapper">
				<div class="search-box">
					<div class="search-card">
						<input class="search-input" type="text" placeholder="Name or keywords">
						<button class="search-button">Search</button>
					</div>
				</div>
			</div>

			<!-- filter box -->
			<div class="filter-box">
				<div class="filter-dropdown">
					<select onchange="filter()" class="filter-select" id="University" name="University">
						<option>University</option>
						<option>KFUPM</option>
						<option>KSU</option>
						<option>PMU</option>
					</select>
					<select onchange="filter()" class="filter-select" id="Major" name="Major">
						<option>Major</option>
						<option>Software Engineering</option>
						<option>Computer Science</option>
						<option>Mechanical Engineering</option>
					</select>

