                            <div class="payment-card rounded-lg shadow bg-white text-center h-100">
                                <div
                                    class="payment-card__type px-4 py-5 d-flex justify-content-center align-items-center">
                                    <img src="/images/id-card.png" alt="Card">
                                </div>
                                <div class="payment-card__info p-4">
                                    <h4>todo</h4>
                                    <p>Last Modified: todo</p>
                                    <hr>
                                    <div class="d-flex justify-content-between">
                                        <a href="#" class="text-link set-primary-card">Set as Primary</a>
