<!DOCTYPE html>
<html lang="en">

<%- include("./partials/head.ejs") %>
	<link rel="stylesheet" type="text/css" href="Contact.css">
	<script defer src="tas.js"></script>

	<body>
		<%- include("./partials/nav.ejs") %>





  <div class="form-container">
    <h1 class="sup-us">Contact Us</h1>
    <form action="/Contact" method="POST">

      <label for="name">Name:</label>
      <input placeholder="Name" type="text" id="name" name="name" required>

      <label for="email">Email:</label>
      <input placeholder="Email" type="email" id="email" name="email" required>

      <label for="topic">Topic:</label>
      <input placeholder="Topic" type="text" id="topic" name="topic" required>

      <label for="service">What service:</label>
      <select required id="service" name="service">
        <option value="" selected disabled>Choose your service</option>
        <option value="Issue with the CV">Issue with the CV</option>
        <option value="Issue with the cards">Issue with the cards</option>
      </select>


      <label for="message">Describe the Issue:</label>
      <textarea placeholder="Describe the Issue" id="message" name="message" required></textarea>

      <input type="submit" value="Submit">
    </form>
  </div>
</body>

</html>